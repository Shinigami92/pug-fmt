{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "inlineSourceMap": true,
    "lib": ["ES2020", "DOM"],
    "outDir": "dist",
    "moduleResolution": "Node",
    "rootDir": "src",
    "strict": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "removeComments": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
